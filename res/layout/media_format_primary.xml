<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/info_layout">

    <TextView android:id="@+id/initiate_media_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <Button android:id="@+id/initiate_media_format"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dip"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <CheckBox android:id="@+id/media_format_advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_format_advanced" />

    <TextView android:id="@+id/media_format_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/media_format_select_fs" />

    <RadioGroup android:id="@+id/media_format_supported_fs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>
